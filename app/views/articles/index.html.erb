<h2>我的博客</h2>

<%=link_to "新建博客", new_article_path %>
<table>
  <tr>
    <th>标题</th>
    <th>内容</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td> <%= article.title %>  </td>
      <td> <%= article.content %> </td>
      <td> <%= link_to "查看", article_path(article) %> </td>
      <td> <%= link_to "编辑", edit_article_path(article) %> </td>
      <td> <%= link_to "删除", article_path(article),
                       method: :delete,
                       data: { confirm: "确定要删除吗？" } %> </td>
    </tr>
  <% end %>
</table>
